defmodule PerfectNumbers do
  @doc """
  Determine the aliquot sum of the given `number`, by summing all the factors
  of `number`, aside from `number` itself.

  Based on this sum, classify the number as:

  :perfect if the aliquot sum is equal to `number`
  :abundant if the aliquot sum is greater than `number`
  :deficient if the aliquot sum is less than `number`
  """
  @spec classify(number :: integer) :: {:ok, atom} | {:error, String.t()}
  def classify(number) do
    cond do
      number <= 0 -> {:error, "Classification is only possible for natural numbers."}
      suma_dzielnikow(number) == number -> {:ok, :perfect}
      suma_dzielnikow(number) < number -> {:ok, :deficient}
      suma_dzielnikow(number) > number -> {:ok, :abundant}
    end
  end

  defp suma_dzielnikow(number) when number > 0 do
    1..number
    |> Enum.filter(fn i-> rem(number,i) == 0 and i != number end)
    |> Enum.sum
  end
end
